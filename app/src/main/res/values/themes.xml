<resources>
    <!-- Main theme -->
    <style name="Theme.Alexandria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- colors -->
        <item name="colorPrimary">@color/brown_dark</item>
        <item name="colorPrimaryVariant">@color/brown_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/grey_medium</item>
        <item name="colorSecondaryVariant">@color/grey_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/grey_light</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/brown_medium</item>
        <!--  Typography  -->
        <!-- shapes -->
        <!-- component styles -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/ThemeOverlay.Toolbar</item>
        <!-- Hacky way to change the SearchView's cursor color: https://stackoverflow.com/a/28311351 -->
        <item name="autoCompleteTextViewStyle">@style/SearchView</item>
    </style>

    <style name="Theme.Alexandria.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- component styles -->
    <style name="ThemeOverlay.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/brown_dark</item>
        <item name="colorPrimaryVariant">@color/brown_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/grey_medium</item>
        <item name="colorSecondaryVariant">@color/grey_light</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/brown_dark</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/ic_search_cursor</item>
    </style>
</resources>